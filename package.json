{
  "name": "@lantos1618/better-ui",
  "version": "0.3.1",
  "description": "A minimal, type-safe AI-first UI framework for building tools",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ui",
    "framework",
    "ai",
    "react",
    "tools",
    "typescript"
  ],
  "author": "Lyndon Leong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lantos1618/better-ui"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:lib && npm run build:next",
    "build:lib": "tsup src/index.ts src/components/index.ts --format cjs,esm --dts --clean --tsconfig tsconfig.lib.json",
    "build:next": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build:lib"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.77",
    "@ai-sdk/react": "^2.0.107",
    "ai": "^5.0.107",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@ai-sdk/anthropic": {
      "optional": true
    },
    "@ai-sdk/google": {
      "optional": true
    }
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@jest/globals": "^29.7.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.22",
    "eslint": "^9",
    "eslint-config-next": "^16.0.1",
    "framer-motion": "^12.23.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lucide-react": "^0.543.0",
    "next": "^16.1.6",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.1",
    "typescript": "^5"
  }
}
