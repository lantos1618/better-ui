{
  "name": "@lantos1618/better-ui",
  "version": "0.4.1",
  "description": "A minimal, type-safe AI-first UI framework for building tools",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.mjs",
      "require": "./dist/auth/index.js"
    },
    "./persistence": {
      "types": "./dist/persistence/index.d.ts",
      "import": "./dist/persistence/index.mjs",
      "require": "./dist/persistence/index.js"
    },
    "./theme.css": "./src/theme.css"
  },
  "files": [
    "dist",
    "src/theme.css",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ui",
    "framework",
    "ai",
    "react",
    "tools",
    "typescript"
  ],
  "author": "Lyndon Leong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lantos1618/better-ui"
  },
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "tsup src/index.ts src/react/index.ts src/components/index.ts src/auth/index.ts src/persistence/index.ts --format cjs,esm --dts --clean --tsconfig tsconfig.lib.json",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build:lib"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.77",
    "@ai-sdk/react": "^2.0.107",
    "ai": "^5.0.107",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "jose": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@ai-sdk/anthropic": {
      "optional": true
    },
    "@ai-sdk/google": {
      "optional": true
    },
    "jose": {
      "optional": true
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jose": "^6.1.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.1",
    "typescript": "^5"
  }
}
